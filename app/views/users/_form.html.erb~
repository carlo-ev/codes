<%= form_for @user do |u| %>
	
	<div class="field">
		<%= u.label :username %>
		<%= u.text_field :username %>
	</div>
	<div class="field">
		<%= u.label :email%>
		<%= u.text_field :email %>
	</div>
	<div class="field">
		<%= u.label :password%>
		<%= u.password_field :password %>
	</div>
	<div class="actions"><%= u.submit %> </div>


<% end %>
